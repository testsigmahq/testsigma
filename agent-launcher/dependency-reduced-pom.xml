<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.testsigma</groupId>
  <artifactId>agent-launcher</artifactId>
  <name>agent-launcher</name>
  <version>1.0.0</version>
  <developers>
    <developer>
      <id>Testsigma Technologies Inc</id>
      <name>Testsigma Technologies Inc</name>
      <email>engineering@testsigma.com</email>
    </developer>
  </developers>
  <organization>
    <name>Testsigma Technologies Inc</name>
    <url>http://testsigma.com</url>
  </organization>
  <build>
    <finalName>agent-launcher</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven.compiler.plugin}</version>
        <configuration>
          <release>9</release>
          <annotationProcessorPaths>
            <path>
              <groupId>org.projectlombok</groupId>
              <artifactId>lombok</artifactId>
              <version>${lombok.version}</version>
            </path>
          </annotationProcessorPaths>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>com.testsigma.agent.launcher.Application</Main-Class>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <lombok.version>1.18.10</lombok.version>
    <systemtray.version>3.17</systemtray.version>
    <maven.compiler.plugin>3.8.1</maven.compiler.plugin>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <commons.lang.version>3.4</commons.lang.version>
    <httpcomponents.version>4.5.13</httpcomponents.version>
  </properties>
</project>
